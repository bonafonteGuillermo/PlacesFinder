<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation"
        android:layout_marginEnd="@dimen/place_item_margin_end"
        android:layout_marginStart="@dimen/place_item_margin_start"
        android:layout_marginTop="@dimen/place_item_margin_top"
        android:layout_marginBottom="@dimen/place_item_margin_bottom"
        app:cardBackgroundColor="@color/places__card_view_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/place_item_linear_padding">

        <TextView
                android:id="@+id/tv_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Shoreline Golf Links"/>

        <TextView
                android:id="@+id/tv_place_vicinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_subtitle"
                tools:text="Shoreline Golf Links"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
